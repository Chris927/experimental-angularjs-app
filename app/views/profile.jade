.row
  .col-xs-12
    h3 My Profile

.row
  .col-xs-12
    form(role='form', name='editProfileForm', novalidate)
      p {{ editProfileForm.email.$valid }}
      .form-group
        label(for='name') Name
        input.form-control(type='text', id='name', required, ng-model="data.name", placeholder='My name')
      .form-group(ng-class="{ 'has-error': editProfileForm.email.$invalid }")
        label(for='email') Email
        input.form-control(type='email', id='email', name='email', required, ng-model="data.email", placeholder='My email')
      .form-group
        label(for='sessionTitle') Session Title
        input.form-control(type='text', id='sessionTitle', required, ng-model="data.sessionTitle", placeholder='Session title for calendar test')
      .form-group
        label(for='sessionDuration') Session Duration
        input.form-control(type='number', id='sessionDuration', required, ng-model="data.sessionDuration", placeholder='Session duration for calendar test')
      .form-group
        .btn-group.btn-group-justified
          .btn-group
            button.btn.btn-primary(ng-click='update()', ng-disabled='editProfileForm.$pristine || editProfileForm.$invalid')
              | Save 
              span.glyphicon.glyphicon-ok

